section.podcasts#podcasts
  .container
    h2.title=i18n.podcasts.title
    ul.card__list
      li.card__row
        .card__img.card-scala
          include ../icons/scala.svg
        .card__block
          .card__info!=i18n.podcasts.list[0].text
          .card__socials.socials
            a(href=i18n.podcasts.list[0].twitter)
              include ../icons/twitter.svg
          a(href="/").btn=i18n.listen
      li.card__row
        .card__img.card-podcast
          include ../icons/podcast.svg
        .card__block
          .card__info!=i18n.podcasts.list[1].text
          .card__socials.socials
            a(href=i18n.podcasts.list[1].twitter)
              include ../icons/twitter.svg
          a(href="/").btn=i18n.listen

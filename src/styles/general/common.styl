html,
body
  padding 0
  margin 0
  width: 100%
  height: 100%

body
  background white

.wrapper
  width 100%
  overflow hidden
  font-family 'Roboto', sans-serif
  font-weight normal
  font-style normal
  color: --text
  line-height 1.5
  font-size: 14px;
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  @media medium
    font-size 16px

.container
  width 100%
  margin 0 auto
  padding 0 10px
  box-sizing border-box
  @media medium
    max-width 768px
    padding 0 30px
  @media regular
    max-width 1200px


.title
  font-family: "Montserrat";
  font-style: normal;
  font-weight: 600;
  font-size: 24px;
  text-align: center;
  letter-spacing: 0.01em;
  color: --title;
  margin 0 0 16px
  @media medium
    font-size: 48px;

.btn
  display inline-block
  min-width: 160px
  height 40px
  background --accent
  color white
  text-align: center
  line-height: 40px
  font-weight: 500;
  font-size: 13px;
  letter-spacing: 0.01em;
  text-decoration: none
  box-shadow: 0px 4px 10px rgba(16, 156, 241, 0.24);
  border-radius: 4px;
  transition .25s ease-out
  &:hover
    background: --hover
  &:disabled
    background: --text

.desc
  font-family: "Montserrat";
  text-align center
  font-size 14px
  margin 0
  @media medium
    font-size 18px

.external-link
  color: --accent
  font-weight: 500;
  font-size: 14px;
  letter-spacing: 0.01em;
  transition .25s ease-out
  &:hover
    color: --hover;
  &:focus
  &:visited
  &:active
    color: --accent
  &:disabled
    color: --text

.socials a
  text-decoration: none
  display inline-block 
  transition: .25s ease-out
  color --accent
  &:hover
    color: --hover;
  &:focus
  &:visited
  &:active
    color: --accent
  &:disabled
    color: --text

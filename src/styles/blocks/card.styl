.card__list
  padding 0
  margin 0

.card__row
  border-bottom 1px solid #EBEFF2
  @media medium
    display flex
    font-size: 18px;
    margin 0 -16px
    padding 32px 0

.card__img
  @media medium
    width 50%
    padding 0 16px
    box-sizing: border-box

.card__img svg 
  transition: .25s ease-in-out
  display block
  max-width 100%
  height: auto;
  background: #FFFFFF;
  box-shadow: 15.4429px 7.72143px 61.7714px rgba(136, 165, 191, 0.38), -15.4429px -7.72143px 61.7714px rgba(255, 255, 255, 0.7);
  border-radius: 30px;

.card__block
  @media medium
    padding 0 16px
    width 50%
    box-sizing: border-box

.scala-card-text 
  fill: #CE2929

.card-pocarst-accent
  fill: #f5f5f5

.card-haskell:hover svg
  background: #000000

.card-scala:hover svg
  background: #CE2929
  .scala-card-text 
    fill: #fff

  
.card-podcast:hover svg 
  fill: #fff
  background: #151515
  .card-pocarst-accent
    fill: #151515